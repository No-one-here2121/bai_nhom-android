<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Demo_thoi_tiet.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:theme="@style/Theme.Demo_thoi_tiet.AppWidgetContainer">

    <!-- 1. Background Image (Used for changing color while keeping rounded corners) -->
    <ImageView
        android:id="@+id/widget_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/container_1"
        android:scaleType="fitXY" />

    <!-- 2. Main Content -->
    <LinearLayout
        android:id="@+id/backgr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Left Column: Location & Temp -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Location_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vị trí"
                android:textColor="#EFAA82"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/Location_degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--°C"
                android:textColor="#EFAA82"
                android:textSize="32sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Right Column: Details & Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!-- Weather Icon -->
            <ImageView
                android:id="@+id/widget_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginBottom="4dp"
                android:src="@drawable/sunny" />

            <TextView
                android:id="@+id/Loaction_rain_percent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#EFAA82"
                android:text="Tỉ lệ mưa" />

            <TextView
                android:id="@+id/Location_feel_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#EFAA82"
                android:text="Cảm giác như" />

            <TextView
                android:id="@+id/Location_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#EFAA82"
                android:text="Mô tả" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>