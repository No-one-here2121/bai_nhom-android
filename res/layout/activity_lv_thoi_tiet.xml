<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/myToolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời tiết"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/ivSortAQI"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:src="@drawable/sort" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtSearchCityList"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Tìm tên thành phố/sân bay"
            android:textColorHint="#999999"
            android:textColor="@android:color/white"
            android:paddingHorizontal="12dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_search_bar"
            android:drawableStart="@android:drawable/ic_menu_search"/>

        <HorizontalScrollView
            android:id="@+id/hsvHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingTop="8dp">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"/>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_suggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2C2C2E"
            android:visibility="gone"
            android:elevation="4dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_danh_sach"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:padding="16dp"
        android:clipToPadding="false"
        android:scrollbars="none"/>

    <LinearLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#2C2C2E"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnMap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Bản đồ"
            android:src="@android:drawable/ic_menu_mapmode"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/btnList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Danh sách thành phố"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="#4CAF50" />

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Tài khoản"
            android:src="@android:drawable/ic_menu_myplaces"
            app:tint="#FFFFFF" />

    </LinearLayout>

</LinearLayout>